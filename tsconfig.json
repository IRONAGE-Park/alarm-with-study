{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es5",
    "outDir": "./build",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "@root/*": ["src/*"],
      "@assets/*": ["src/assets/*"],
      "@constants/*": ["src/constants/*"],
      "@guards/*": ["src/guards/*"],
      "@libs/*": ["src/libs/*"],
      "@main/*": ["src/modules/*"],
      "@renderer/*": ["src/apps/*"],
      "@windows/*": ["src/windows/*"],
      "@preloads/*": ["src/preloads/*"],
      "@bridges/*": ["src/preloads/bridges/*"]
    }
  },
  "include": ["./src/**/*"]
}
